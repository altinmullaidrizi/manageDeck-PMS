@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


    <div class="auth">
        <div class="auth_left">
            <div class="card">
                <div class="text-center mb-2">
                    <a class="header-brand" asp-page="Index"><i class="fa fa-soccer-ball-o brand-logo"></i></a>
                </div>
                <div class="card-body">
                    <div class="card-title">Login to your account</div>

                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <input asp-for="Input.Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password<a asp-page="./ForgotPassword" class="float-right small">I forgot password</a></label>
                            <input asp-for="Input.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">
                                <input  asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" />
                                <span class="custom-control-label">  @Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                            </label>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary btn-block">Log in</button>
                        </div>
                    </form>
                </div>
                <div class="text-center text-muted">
                    Don't have account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
                </div>
            </div>
        </div>
        <div class="auth_right full_img"></div>
    </div>
