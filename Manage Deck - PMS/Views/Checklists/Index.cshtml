@model IEnumerable<Manage_Deck___PMS.Models.Checklist>

@{
    ViewData["Title"] = "Index";

    var cud = (Guid)ViewData["CurrentUserId"];
}

    <div class="section-body">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <ul class="nav nav-tabs page-header-tab">
                    <li class="nav-item"><a class="nav-link active">ToDo List</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Create">Add Todo</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="section-body mt-3">
        <div class="container-fluid">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="todo-list" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive todo_list">
                                <table class="table table-hover table-striped table-vcenter mb-0 text-nowrap">
                                    <thead>
                                        <tr>
                                            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">To Do</a></th>
                                            <th class="w100">Priority</th>
                                            <th class="w-10"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.UserId == cud)
                                            {
                                            <tr>
                                                <td>
                                                    <label class="custom-control custom-checkbox">
                                                        @if (item.Completed)
                                                        {
                                                            <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1" checked>
                                                        }
                                                        else
                                                        {
                                                            <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                                        }


                                                        <span class="custom-control-label"> @Html.DisplayFor(modelItem => item.Title)</span>
                                                    </label>
                                                </td>
                                                <td><span class="tag tag-danger ml-0 mr-0">@Html.DisplayFor(modelItem => item.Priority)</span></td>
                                                
                                                <td style="width: 10%">
                                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                </td>
                                            </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

